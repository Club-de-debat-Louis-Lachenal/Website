<script>
  function active() {
    return nav.querySelector(".active");
  }
  function handleScroll() {
    for (let section of document.querySelectorAll("section")) {
      let rect = section.getBoundingClientRect();
      if (rect.top < 50) {
        link = nav.querySelector(`a#${section.id}`);
      }
    }
    if (typeof link === "undefined") {
        link = nav.querySelector("a");
    }
      line.setAttribute(
        "style",
        `left: ${link.getBoundingClientRect().left}px; width: ${link.getBoundingClientRect().width}px;`
      );
    link = undefined;
  }
  let nav = document.querySelector("nav");
  let line = nav.querySelector(".line");
  let link = undefined;

  import { gsap } from "gsap";

  document.addEventListener("load", () => {
    gsap.registerPlugin(ScrollTrigger);
    // TODO Make on scroll animations
  });
  document.addEventListener("scroll", handleScroll);
  // Call once to setup vars and underline current header (because the scroll is preserved on reload)
  handleScroll();
</script>

