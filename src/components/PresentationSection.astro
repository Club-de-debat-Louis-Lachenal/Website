---
interface Props {
  id: string;
  title: string;
  desc: string;
}
let { id, title, desc } = Astro.props;
---

<section id={id}>
  <h1>{title}</h1>
  <p>{desc}</p>
</section>

<style lang="scss">
  section {
    @apply flex flex-col justify-center items-center;
    padding: 10vw;
    min-height: 80vh;
    h1 {
      font-size: 50px;
      margin: 50px;
      position: relative;
      &::before {
        content: "";
        position: absolute;
        top: 100%;
        width: 110%;
        transform: translateX(-50%);
        left: 50%;
        height: 5px;
        border-radius: 2px;
        background: linear-gradient(
          111.3deg,
          var(--primary) 9.6%,
          var(--secondary) 93.6%
        );
      }
    }
    p {
      width: 50%;
      font-size: clamp(15px, 2vw, 20px);
    }
  }
</style>
